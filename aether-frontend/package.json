{
  "name": "aether-desktop",
  "version": "2.0.0",
  "description": "Aether - AI Desktop Assistant (Clean Architecture Rebuild)",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:all && cross-env ELECTRON_DEV=true GURU_SPAWN_BACKEND=false NODE_ENV=development electron .",
    "dev:watch": "npm run build:all:watch & cross-env ELECTRON_DEV=true GURU_SPAWN_BACKEND=false NODE_ENV=development electron .",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/integration/security --verbose",
    "test:performance": "jest tests/integration/performance --verbose",
    "build:preload": "node scripts/bundle-preload.mjs",
    "build:preload:watch": "node scripts/bundle-preload.mjs --watch",
    "build:renderer": "node scripts/bundle-renderers.mjs",
    "build:renderer:watch": "node scripts/bundle-renderers.mjs --watch",
    "build:all": "npm run build:preload && npm run build:renderer",
    "build:all:watch": "npm run build:preload:watch & npm run build:renderer:watch",
    "build": "npm run build:all && electron-builder --publish=never",
    "build:mac": "npm run build:all && electron-builder --mac --publish=never",
    "build:win": "npm run build:all && electron-builder --win --publish=never",
    "build:linux": "npm run build:all && electron-builder --linux --publish=never",
    "dist": "npm run build",
    "dist:mac": "npm run build:mac",
    "dist:win": "npm run build:win",
    "dist:linux": "npm run build:linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "security:audit": "node scripts/security-audit.js --verbose",
    "security:audit:fix": "node scripts/security-audit.js --fix",
    "security:audit:json": "node scripts/security-audit.js --json",
    "audit": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix",
    "test:mutation": "stryker run",
    "test:mutation:html": "stryker run --htmlReporter"
  },
  "keywords": [
    "AI",
    "voice",
    "assistant",
    "visualization",
    "clean-architecture"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "ace-builds": "^1.43.2",
    "dompurify": "^3.3.0",
    "dotenv": "^16.0.3",
    "events": "^3.3.0",
    "highlight.js": "^11.11.1",
    "marked": "^16.2.1",
    "prettier": "^2.8.8",
    "three": "^0.160.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@types/electron": "^1.4.38",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "cross-env": "^7.0.3",
    "electron": "^25.1.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "shiki": "^3.12.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.aether.desktop",
    "productName": "Aether Desktop",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!tests/**",
      "!test-results/**",
      "!**/*.md",
      "!.vscode/**",
      "!.github/**"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/perplexica-assets",
        "to": "perplexica-assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}

