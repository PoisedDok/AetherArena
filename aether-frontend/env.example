# Aether Desktop Configuration
# Copy this file to .env and adjust values as needed
# All values are optional - defaults will be used if not specified

# ============================================================================
# Backend Configuration
# ============================================================================
# Backend directory path (auto-detected if not set)
# The frontend will search for the backend in common locations relative to itself
# Set this if your backend is in a non-standard location
AETHER_BACKEND_DIR=/Volumes/Disk-D/Aether/Aether/AetherArena/aether-backend

GURU_API_URL=http://localhost:8765
GURU_SPAWN_BACKEND=true
BACKEND_HEALTH_INTERVAL=5000
BACKEND_STARTUP_TIMEOUT=30000

# ============================================================================
# External Services
# ============================================================================
PERPLEXICA_URL=http://127.0.0.1:3000
SEARXNG_URL=http://127.0.0.1:4000
DOCLING_URL=http://127.0.0.1:8000
XLWINGS_URL=http://127.0.0.1:8001

# ============================================================================
# LLM Provider (LM Studio, Ollama, etc.)
# ============================================================================
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_ABORT_URL=http://localhost:1234/v1/chat/abort
LLM_TIMEOUT=120000

# ============================================================================
# UI Configuration
# ============================================================================
WIDGET_SIZE=300
NORMAL_WIDTH=1000
NORMAL_HEIGHT=800
WIDGET_MARGIN=24
UI_UPDATE_INTERVAL=100
UI_ANIMATION_DURATION=300

# ============================================================================
# Audio Settings
# ============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=4096
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# ============================================================================
# WebSocket Configuration
# ============================================================================
WS_RECONNECT_DELAY=2000
WS_RECONNECT_BACKOFF_MAX=30000
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=10000

# ============================================================================
# API Configuration
# ============================================================================
API_TIMEOUT=15000
API_RETRIES=2
API_RETRY_DELAY=1000
API_MAX_PAYLOAD_SIZE=10485760

# ============================================================================
# Security Configuration
# ============================================================================
MAX_MESSAGE_SIZE=100000
MAX_MESSAGES_PER_MINUTE=60
IPC_RATE_LIMIT_WINDOW=1000
IPC_MAX_CALLS_PER_WINDOW=50
MAX_FILE_SIZE_MB=10
MAX_PAYLOAD_SIZE_MB=10
SANITIZER_PROFILE=strict

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_BACKEND=postgresql
MAX_DOM_MESSAGES=200
PRUNE_BATCH_SIZE=25
GRACE_PERIOD_MS=10000
BUFFER_SIZE=500

# ============================================================================
# Artifacts Configuration
# ============================================================================
ARTIFACT_FETCH_TIMEOUT=12000
ARTIFACT_SAVE_TIMEOUT=15000
MAX_ARTIFACT_SIZE=5242880

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=info
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_CONSOLE=true
LOG_FILE=true

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_VOICE_INPUT=true
ENABLE_TTS=true
FEATURE_LEGAL_NEWS=true
FEATURE_ARTIFACTS_STREAM=true
FEATURE_DIAGNOSTICS=false
OFFLINE_MODE=false

# ============================================================================
# Development Flags
# ============================================================================
DEBUG_MODE=false
MOCK_BACKEND=false
VERBOSE_LOGGING=false
SKIP_HEALTH_CHECK=false

# ============================================================================
# Electron Configuration
# ============================================================================
ELECTRON_DEV=false

